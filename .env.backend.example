# Application
APP_ENV=development
DEBUG=true
SECRET_KEY=your-secret-key-here-min-32-chars-change-in-production

# Database
DATABASE_URL=postgresql+asyncpg://user:password@localhost:5432/casabricks
SUPABASE_URL=https://your-project.supabase.co
SUPABASE_ANON_KEY=your-anon-key
SUPABASE_SERVICE_KEY=your-service-role-key

# Redis
REDIS_URL=redis://localhost:6379/0

# Celery
CELERY_BROKER_URL=redis://localhost:6379/1
CELERY_RESULT_BACKEND=redis://localhost:6379/2

# AI Service
AI_SERVICE_API_URL=https://your-ai-service.com/api/v1/enhance
AI_SERVICE_API_KEY=your-ai-api-key
AI_SERVICE_WEBHOOK_SECRET=shared-secret-for-signature-verification

# Storage
SUPABASE_STORAGE_BUCKET=property-images
MAX_FILE_SIZE_MB=10

# Security
JWT_SECRET_KEY=your-jwt-secret-min-32-chars-change-in-production
JWT_ALGORITHM=HS256
ACCESS_TOKEN_EXPIRE_MINUTES=60

# CORS
ALLOWED_ORIGINS=http://localhost:3000,http://localhost:5173,https://casabricks.com

# Rate Limiting
RATE_LIMIT_PER_MINUTE=60
RATE_LIMIT_INQUIRIES_PER_HOUR=5

# Monitoring
SENTRY_DSN=https://your-sentry-dsn
ENABLE_METRICS=true
